{
  "extends": "./tsconfig.base.json",
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "rollup.config.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2022",
    "sourceMap": false
  },
  "ts-node": {
    "compilerOptions": {
      "sourceMap": true
    }
  }
}
